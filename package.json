{
  "name": "api-playwright-ci-cd",
  "version": "1.0.0",
  "description": "A simple API project with CI/CD pipeline using TypeScript, Playwright, and GitHub Actions.",
  "main": "dist/app.js",
  "scripts": {
    "test:unit": "jest --testPathPattern=tests/unit --forceExit",
    "test:e2e": "playwright test",
    "build": "tsc",
    "start": "node dist/src/app.js",
    "dev": "ts-node src/app.ts",
    "coverage": "jest --testPathPattern=tests/unit --forceExit --coverage"
  },
  "dependencies": {
    "express": "^4.17.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "nyc": "^17.1.0",
    "playwright": "^1.12.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "nyc": {
    "temp-dir": "./coverage",
    "all": true,
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "license": "MIT"
}
